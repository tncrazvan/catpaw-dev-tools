{
    "name": "catpaw/starter",
    "type": "project",
    "description": "A php CatPaw starter template",
    "homepage": "https://github.com/tncrazvan/catpaw-starter",
    "license": "MIT",
    "scripts": {
        "load": "XDEBUG_MODE=off composer dump-autoload -o",
        "fix": [
            "XDEBUG_MODE=off php ./vendor/bin/php-cs-fixer fix src",
            "XDEBUG_MODE=off php ./vendor/bin/php-cs-fixer fix tests"
        ],
        "action:test": [],
        "test": [],
        "start": "XDEBUG_MODE=off php ./bin/start -e./src/main.php",
        "sync": "XDEBUG_MODE=off php ./bin/start -e./src/sync.php",
        "export": "XDEBUG_MODE=off php ./bin/start -e./src/export.php",
        "build": "XDEBUG_MODE=off php -dphar.readonly=0 ./bin/start -e./bin/build"
    },
    "authors": [
        {
            "name": "Razvan Tanase",
            "email": "tangent.jotey@gmail.com",
            "homepage": "https://github.com/tncrazvan",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/lib/"
        },
        "files": [
            "src/sync.php",
            "src/export.php",
            "src/deleteAllTags.php"
        ]
    },
    "require": {
        "php": "^8.1",
        "catpaw/core": "^0.4",
        "amphp/amp": "^2.6",
        "amphp/file": "^2.0",
        "catpaw/web": "^0.4",
        "catpaw/queue": "^0.4",
        "catpaw/mysql": "^0.4",
        "catpaw/raspberrypi": "^0.4",
        "catpaw/store": "^0.4",
        "catpaw/cui": "^0.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "^4.23"
    },
    "config": {
        "preferred-install": "dist",
        "process-timeout": 0
    }
}