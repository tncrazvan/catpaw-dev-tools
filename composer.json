{
    "name": "catpaw/dev-tools",
    "type": "project",
    "description": "A php CatPaw starter template",
    "homepage": "https://github.com/tncrazvan/catpaw-dev-tools",
    "license": "MIT",
    "scripts": {
        "load": "XDEBUG_MODE=off composer dump-autoload -o",
        "fix": [
            "php -dxdebug.mode=off -dxdebug.start_with_request=no ./vendor/bin/php-cs-fixer fix src",
            "php -dxdebug.mode=off -dxdebug.start_with_request=no ./vendor/bin/php-cs-fixer fix tests"
        ],
        "action:test": [],
        "test": [],
        "start": "php -dxdebug.mode=off -dxdebug.start_with_request=no ./bin/start -e./src/main.php",
        "transform": "php -dxdebug.mode=off -dxdebug.start_with_request=no ./bin/start -e./src/main.php --sql-transform=\"resources/routes\"",
        "server": "php -dxdebug.mode=off -dxdebug.start_with_request=no ./bin/start -e./src/main.php --start-web-server",
        "clear:cache": "php -dxdebug.mode=off -dxdebug.start_with_request=no ./bin/start -e./src/main.php --clear-cache",
        "sync": "php -dxdebug.mode=off -dxdebug.start_with_request=no ./bin/start -e./src/main.php --sync",
        "export": "php -dxdebug.mode=off -dxdebug.start_with_request=no ./bin/start -e./src/main.php --export",
        "execute": "php -dxdebug.mode=off -dxdebug.start_with_request=no ./bin/start -e./src/main.php --execute-everywhere-parallel",
        "build": "php -dxdebug.mode=off -dxdebug.start_with_request=no -dphar.readonly=0 ./product.phar --build-config --build",
        "post-autoload-dump": [
            "[ ! -f product.phar ] && wget https://github.com/tncrazvan/catpaw-dev-tools/releases/download/0.4.110/product.phar || echo \"product.phar found.\n\""
        ]
    },
    "authors": [
        {
            "name": "Razvan Tanase",
            "email": "tangent.jotey@gmail.com",
            "homepage": "https://github.com/tncrazvan",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/lib/"
        },
        "files": [
            "src/sync.php",
            "src/export.php",
            "src/build.php",
            "src/deleteAllTags.php",
            "src/executeEverywhere.php",
            "src/executeEverywhereParallel.php",
            "src/sqlTransform.php",
            "src/startWebServer.php"
        ]
    },
    "require": {
        "php": "^8.1",
        "catpaw/core": "^0.4",
        "amphp/amp": "^2.6",
        "amphp/file": "^2.0",
        "catpaw/web": "^0.4",
        "catpaw/queue": "^0.4",
        "catpaw/mysql": "^0.4",
        "catpaw/raspberrypi": "^0.4",
        "catpaw/store": "^0.4",
        "catpaw/cui": "^0.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpunit/phpunit": "^9",
        "vimeo/psalm": "^4.23",
        "overtrue/phplint": "^5.3"
    },
    "config": {
        "preferred-install": "dist",
        "process-timeout": 0
    }
}